<h1>New Post</h1>

  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2>Please fix <%= pluralize(@post.errors.count, "error") %>:</h2>
      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :body %>
  <%= f.text_area :body %>
  <%= f.submit %>
<% end %>

<p><%= link_to 'Cancel', posts_path %></p>
